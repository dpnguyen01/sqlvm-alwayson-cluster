{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "deploymentPrefix":{
      "type": "string"
    },
    "sqlVMName": {
      "type": "string"
    },
    "sqlSubnetRef": {
      "type": "string"
    },
    "sqlBEAddressPoolID": {
      "type": "string"
    },
    "sqlwNicName": {
      "type": "string"
    },
    "sql3AddressNameWithSuffix": {
      "type": "string"
    },
    "sql4AddressNameWithSuffix": {
      "type": "string"
    }
  },
  "resources": [
    {
      "name": "[concat(parameters('deploymentPrefix'),'-',parameters('sqlVMName'), '-03','-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('sqlSubnetRef')]"
              },
              "publicIpAddress": {
                "id": "[resourceId(resourceGroup().Name,'Microsoft.Network/publicIpAddresses', parameters('sql3AddressNameWithSuffix'))]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('sqlBEAddressPoolID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('deploymentPrefix'),'-',parameters('sqlVMName'), '-04','-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('sqlSubnetRef')]"
              },
              "publicIpAddress": {
                "id": "[resourceId(resourceGroup().Name,'Microsoft.Network/publicIpAddresses', parameters('sql4AddressNameWithSuffix'))]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('sqlBEAddressPoolID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('sqlwNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('sqlSubnetRef')]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}
